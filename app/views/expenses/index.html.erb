<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

  <div class="bg-gray-50 rounded-lg p-4 mb-8 flex flex-col md:flex-row justify-between items-center gap-4 border border-gray-200">
    
    <div class="flex items-center">
      <%= link_to root_path(month: (@current_date - 1.month).to_s), class: "p-2 hover:bg-white rounded-full transition shadow-sm" do %>
        ‚¨ÖÔ∏è
      <% end %>
      
      <span class="mx-4 text-xl font-bold text-gray-800 capitalize min-w-[150px] text-center">
        <%= I18n.l(@current_date, format: "%B %Y") %>
      </span>

      <%= link_to root_path(month: (@current_date + 1.month).to_s), class: "p-2 hover:bg-white rounded-full transition shadow-sm" do %>
        ‚û°Ô∏è
      <% end %>
    </div>

    <div class="flex items-center bg-white p-2 rounded shadow-sm">
      <%= form_with(model: current_user, url: user_path(current_user), method: :patch, class: "flex gap-2 items-center") do |f| %>
        <%= hidden_field_tag :month, params[:month] %> <label class="text-sm font-medium text-gray-500 mr-1">Meta:</label>
        
        <div class="relative rounded-md shadow-sm">
          <div class="absolute inset-y-0 left-0 pl-2 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">R$</span>
          </div>
          <%= f.number_field :budget, step: "0.01", class: "pl-8 pr-3 py-1 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm w-32", placeholder: "0.00" %>
        </div>
        
        <%= f.submit "Salvar", class: "bg-indigo-600 text-white px-3 py-1 rounded-md hover:bg-indigo-700 text-sm font-medium cursor-pointer" %>
      <% end %>
    </div>
  </div>
  
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        üìä Minhas Finan√ßas
      </h2>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4 gap-3">
      <%= link_to expenses_path(format: :csv, month: params[:month]), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Baixar Planilha
      <% end %>

      <%= link_to "Nova Despesa Manual", new_expense_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-indigo-500">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Meta Mensal</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_to_currency(@orcamento) %></dd>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-pink-500">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate capitalize">Gasto em <%= I18n.l(@current_date, format: "%B") %></dt>
        <dd class="mt-1 text-3xl font-semibold text-pink-600"><%= number_to_currency(@total_gasto) %></dd>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 <%= @saldo.negative? ? 'border-red-500' : 'border-green-500' %>">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Dispon√≠vel</dt>
        <dd class="mt-1 text-3xl font-semibold <%= @saldo.negative? ? 'text-red-600' : 'text-green-600' %>">
          <%= number_to_currency(@saldo) %>
        </dd>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Gastos por Categoria</h3>
      <%= pie_chart @expenses_by_category, donut: true, prefix: "R$ ", colors: ["#6366f1", "#ec4899", "#10b981", "#f59e0b", "#8b5cf6", "#ef4444", "#3b82f6"] %>
    </div>
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Evolu√ß√£o Di√°ria</h3>
      <%= column_chart @expenses_by_day, prefix: "R$ ", colors: ["#6366f1"] %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Hist√≥rico de <%= I18n.l(@current_date, format: "%B") %></h3>
    </div>
    <ul class="divide-y divide-gray-200">
      <% if @expenses.any? %>
        <% @expenses.each do |expense| %>
          <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex items-center justify-between">
              
              <div class="flex flex-col min-w-0 flex-1 mr-4">
                <p class="text-sm font-medium text-indigo-600 truncate"><%= expense.description %></p>
                <div class="flex items-center text-sm text-gray-500 mt-1">
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800 mr-2">
                    <%= expense.category %>
                  </span>
                  <span><%= expense.date.strftime("%d/%m - %H:%M") %></span>
                </div>
              </div>

              <div class="flex items-center">
                <div class="text-right mr-4">
                  <p class="text-sm font-bold text-gray-900"><%= number_to_currency(expense.amount) %></p>
                </div>
                
                <div class="flex space-x-2">
                  <%= link_to edit_expense_path(expense), class: "text-indigo-600 hover:text-indigo-900 p-1" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>

                  <%= button_to expense_path(expense), method: :delete, data: { turbo_confirm: "Tem certeza que quer apagar este gasto?" }, class: "text-red-600 hover:text-red-900 p-1 bg-transparent border-none cursor-pointer" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                </div>
              </div>

            </div>
          </li>
        <% end %>
      <% else %>
        <li class="px-4 py-8 text-center text-gray-500">
          Nenhuma despesa encontrada neste m√™s.
        </li>
      <% end %>
    </ul>
  </div>

</div>