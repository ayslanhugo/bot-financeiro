<%= form_with(model: expense, class: "space-y-6") do |form| %>
  <% if expense.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            Ops! Encontramos <%= pluralize(expense.errors.count, "erro") %>:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% expense.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :amount, "Valor (R$)", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 relative rounded-md shadow-sm">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <span class="text-gray-500 sm:text-sm">R$</span>
      </div>
      <%= form.number_field :amount, step: "0.01", placeholder: "0,00", required: true, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 pr-12 sm:text-lg border-gray-300 rounded-md py-3" %>
      <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
        <span class="text-gray-500 sm:text-sm">BRL</span>
      </div>
    </div>
  </div>

  <div>
    <%= form.label :description, "Descrição (Onde gastou?)", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_field :description, placeholder: "Ex: Almoço, Uber, Mercado...", required: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-3 px-3" %>
    </div>
  </div>

<div>
    <%= form.label :category, "Categoria", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.collection_select :category, 
          current_user.categories.order(:name), # Pega as categorias do banco
          :name, :name,                         # Usa o nome como valor
          { include_blank: "Selecione..." }, 
          { class: "mt-1 block w-full py-3 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } 
      %>
      
      <div class="mt-2 text-right">
        <%= link_to "Gerenciar Categorias", categories_path, class: "text-xs text-indigo-600 hover:text-indigo-800 font-medium" %>
      </div>
    </div>
  </div>

  <div>
    <%= form.label :date, "Data da Compra", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.date_field :date, value: (expense.date || Date.current), class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md py-3 px-3" %>
    </div>
  </div>

  <div class="pt-4 flex items-center justify-between gap-4">
    <%= link_to "Cancelar", root_path, class: "w-1/3 flex justify-center py-3 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none" %>
    
    <%= form.submit "Salvar Despesa", class: "w-2/3 flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
  </div>
<% end %>